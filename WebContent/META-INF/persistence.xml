<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="HarrisonCollege" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>model.HcClass</class>
		<class>model.HcClassroom</class>
		<class>model.HcCours</class>
		<class>model.HcDepartment</class>
		<class>model.HcInstructor</class>
		<class>model.HcMajor</class>
		<class>model.HcStudentreg</class>
		<class>model.HcStudent</class>
		<class>model.HcUser</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:orcl"/>
			<property name="javax.persistence.jdbc.user" value="ora1"/>
			<property name="javax.persistence.jdbc.password" value="ora1"/>
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
		</properties>
	</persistence-unit>
</persistence>
